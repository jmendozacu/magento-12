<?xml version="1.0"?>
<config>
    <modules>
        <AW_ARUnitManufacturer>
            <version>1.0.9</version><platform>ce</platform>
        </AW_ARUnitManufacturer>
    </modules>
    <global>
        <helpers>
            <awunitmanufacturer>
                    <class>AW_Advancedreports_Helper</class>
            </awunitmanufacturer>
        </helpers>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <AW_ARUnitManufacturer>
                    <files>
                        <default>AW_Advancedreports.csv</default>
                    </files>
                </AW_ARUnitManufacturer>
            </modules>
        </translate>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <report>
                            <children>
                                <advancedreports>
                                    <children>
                                        <manufacturer>
                                            <title>Sales by Manufacturer</title>
                                            <sort_order>95</sort_order>
                                        </manufacturer>
                                    </children>
                                </advancedreports>
                            </children>
                        </report>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>
